{
  "name": "petrojet",
  "version": "1.0.0",
  "description": "petrojet project",
  "license": "ISC",
  "author": "amir",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss css/style.css -w",
    "devserver": "live-server --port=43437",
    "backend": "nodemon server.js",
    "update-env": "node update-env.js",
    "start": "npm-run-all update-env --parallel devserver watch:sass backend",
    "compile:sass": "sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 20 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "postcss css/style.prefix.css -u cssnano -o css/style.css",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concat": "^1.0.3",
    "cssnano": "^7.1.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.89.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0"
  }
}
